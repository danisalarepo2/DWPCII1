<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/addproject.png" alt="Imagen creacion del proyecto">
                <span 
                class="card-title add-project"
                style="font-weight: bolder">
                Crear Proyecto
                </span>
            </div>
            <form autocomplete="off" action="/project/add" method="post">
            <div class="card-content">
                <div class="input-field">
                    <label for="project-name">
                        Nombre del projecto
                    </label>
                    <input type="text"
                    id="project-name"
                    name="name"
                    placeholder="Ingrese nombre del proyecto"
                    class="validate"
                    value="{{ project.name }}"
                    />
                      <span 
                        class="helper-text"
                        data-error="Es necesario ingresar el nombre del proyecto"
                        data-success="✅ Correcto"
                        style="color: crimson;"></span>
                    
                </div>
                <div class="input-field">
                    <label for="project-description">
                        Descripción del projecto
                    </label>
                    <textarea name="description"
                    id="project-description"
                    class="materialize-textarea validate"
                    required>{{project.description}}</textarea>
                      <span 
                        class="helper-text"
                        data-error="Debe ingresar una descripción"
                        data-success="✅ Correcto"
                        style="color: crimson;"></span>
                </div>
            </div>
            <div class="card-action">
                <button
                class="blue darken-3 waves-effect waves-light btn">
                <i class="material-icons left">note_add</i> Agregar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>